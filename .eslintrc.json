{
  "plugins": ["prettier"],
  "extends": ["airbnb", "airbnb-typescript", "next", "prettier"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "ignorePatterns": ["**/*.js", "**/*.jsx"],
  "rules": {
    "react/jsx-props-no-spreading": "off",
    "no-irregular-whitespace": "off",
    "prettier/prettier": 2,
    "import/prefer-default-export": "off"
  },
  "overrides": [
    {
      "files": ["*.styles.ts"],
      "rules": {
        "import/prefer-default-export": "off"
      }
    }
  ]
}
